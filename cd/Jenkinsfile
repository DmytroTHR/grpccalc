def clientPath = "cd/helm/client"
def serverPath = "cd/helm/server"

pipeline{
    agent any

    environment {
        version = readFile 'version.txt'
    }

    stages{
        stage('Helm linter'){
            steps{
                sh "helm lint ${clientPath}"
                sh "helm lint ${serverPath}"
            }
        }

        stage('Helm install'){
            steps{
                sh "helm update --install calc-client ${clientPath} --set image.tag=$version"
                sh "helm update --install calc-server ${serverPath} --set image.tag=$version"
            }
        }
    }
}